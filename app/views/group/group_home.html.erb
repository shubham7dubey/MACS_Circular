<div class="container" style="margin-top: 5%">
  <div class="row">
    <div class="form-group">
      
      <br>
      <div class="col-sm-10">
        <div class="dynamic-wrap">
          <!--<form role="form" autocomplete="off">-->
          	<%= form_tag group_create_group_function_path do %>
          	<p>Enter group name</p>
          		<div class="span">
              
                   <input id="id"  type="text" name="g_name" required="required"> 

                </div>
          		
          		<%= submit_tag "Create",class: "btn btn-info" %> <p> [Note:- Please enter email id and then create group] </p>
               
          	</div>
          	
          	<br>
            <div class="entry input-group">
              <input class="form-control " name="fields[]" id="em" type="text" placeholder="Email id" required="required" />
             	
              <span class="input-group-btn">
               
                <button class="btn btn-success btn-add " type="button">
                        <span class="glyphicon glyphicon-plus"></span>
                </button>
              </span>
            </div>
             

            <% end %>
          <!--</form>-->
          <br>
          <small>Press <span class="glyphicon glyphicon-plus gs"></span> to add another form field :)</small>
        </div>
      </div>
    </div>
  </div>
</div>

                         


<script type="text/javascript">
	
	$(function() {
  $(document).on('click', '.btn-add', function(e) {
    e.preventDefault();

    var dynaForm = $('.dynamic-wrap form:first'),
      currentEntry = $(this).parents('.entry:first'),
      newEntry = $(currentEntry.clone()).appendTo(dynaForm);
 		
    newEntry.find('input').val('');
    dynaForm.find('.entry:not(:last) .btn-add')
      .removeClass('btn-add').addClass('btn-remove')
      .removeClass('btn-success').addClass('btn-danger')
      .html('<span class="glyphicon glyphicon-minus"></span>');
  }).on('click', '.btn-remove', function(e) {
    $(this).parents('.entry:first').remove();

    e.preventDefault();
    return false;
  });
});

</script>





</body>